{
	"openapi": "3.0.0",
	"info": {
		"version": "4.0.0",
		"title": "Discord Tickets API",
		"description": "This is the schema for the API that you can use to interact with your ticket bot. It is used by the Archives Portal and the Settings Panel websites.\nIf you are using a managed ticket bot your API will be available at `https://my.discordtickets.app:{port}`. Create a ticket if you don't know what port your bot is on.\n# Error codes\nCheck the error `message` for more specific details.\n- `0x001`: Invalid type\n- `0x002`: String is too short\n- `0x003`: String is too long\n- `0x191`: Unauthorised\n- `0x193`: Forbidden\n- `0x194`: Not found\n- `0x1F4`: Internal server error"
	},
	"servers": [
		{
			"description": "[TEST] SwaggerHub API Auto Mocking",
			"url": "https://virtserver.swaggerhub.com/eartharoid/discord-tickets/4.0.0"
		},
		{
			"url": "http://localhost:{port}/api",
			"description": "[DEV] Local development API server",
			"variables": {
				"port": {
					"default": "8080"
				}
			}
		},
		{
			"url": "{host}/api",
			"description": "[PROD] Production API server",
			"variables": {
				"host": {
					"default": "http://localhost:8080"
				}
			}
		}
	],
	"security": [
		{
			"api_key": []
		}
	],
	"paths": {
		"/admin/guilds": {
			"get": {
				"tags": ["admin"],
				"summary": "List the guilds that the user has permission to manage",
				"description": "This route returns an array of guilds that the user can manage.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Guild"
									}
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}": {
			"parameters": [
				{
					"name": "guild",
					"in": "path",
					"description": "The guild to get or update the settings of",
					"required": true,
					"style": "simple",
					"schema": {
						"type": "string"
					}
				}
			],
			"delete": {
				"tags": ["admin"],
				"summary": "Reset a guild's settings",
				"description": "This route resets the guild's settings.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GuildSettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"get": {
				"tags": ["admin"],
				"summary": "Get a guild's settings",
				"description": "This route returns the guild's current settings.",
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GuildSettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"put": {
				"tags": ["admin"],
				"summary": "Set a guild's settings",
				"description": "This route sets the guild's settings.",
				"requestBody": {
					"description": "The full GuildSettings object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/GuildSettings"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/GuildSettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}/data": {
			"get": {
				"tags": ["admin"],
				"summary": "Get properties from the guild data",
				"description": "This route returns the requested property from the guild.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild to reset the settings of",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "query",
						"in": "query",
						"description": "The dot-notation property to get",
						"required": true,
						"style": "form",
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object"
								},
								"example": 5
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}/categories": {
			"get": {
				"tags": ["admin"],
				"summary": "List the categories of a guild",
				"description": "This route returns an array of categories within a guild.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild to list the categories of",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"responses": {
					"200": {
						"description": "OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Category"
									}
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			},
			"post": {
				"tags": ["admin"],
				"summary": "Create a new category",
				"description": "This route creates a new category within a guild.",
				"parameters": [
					{
						"name": "guild",
						"in": "path",
						"description": "The guild to create a category in",
						"required": true,
						"style": "simple",
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "The full CategorySettings object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"required": ["name", "openingMessage", "staffRoles"],
								"properties": {
									"discordCategory": {
										"type": "string"
									},
									"name": {
										"type": "string"
									},
									"openingMessage": {
										"type": "string"
									},
									"staffRoles": {
										"type": "array",
										"items": {
											"type": "string"
										}
									}
								},
								"example": {
									"discordCategory": null,
									"name": "Support",
									"openingMessage": "Thank you for creating a ticket. Please be patient, a member of the support team will reply when they become available. Whilst you wait, please provide as much information about your support query as possible. ",
									"roles": [451745787974778908, 513828182697312267]
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Created",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/CategorySettings"
								}
							}
						}
					},
					"default": {
						"$ref": "#/components/responses/default"
					}
				}
			}
		},
		"/admin/guilds/{guild}/categories/{category}": {
